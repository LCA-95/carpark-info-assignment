datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model carPark {
  id                    Int               @id @default(autoincrement())
  carParkNo             String            @unique
  address               String
  xCoordinate           Float
  yCoordinate           Float
  carParkType           String
  parkingSystemType     String
  shortTermParking      String?
  freeParking           String?
  isNightParkingAllowed Boolean
  carParkDeckQuantity   Int
  gantryHeight          Float
  isBasementCarpark     Boolean
  favouriteCarParks      favouriteCarPark[]  // Added relation field
}

model user {
  id              Int               @id @default(autoincrement())
  name            String
  email           String            @unique
  password        String
  favouriteCarParks favouriteCarPark[]  // Added relation field
}

model favouriteCarPark {
  id        Int       @id @default(autoincrement())
  carParkId Int
  userId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  user      user      @relation(fields: [userId], references: [id])
  carPark   carPark   @relation(fields: [carParkId], references: [id])

  @@unique([carParkId, userId]) // Composite Unique Key 
}